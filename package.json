{
  "name": "rollup-plugin-mocha",
  "version": "0.0.1-alpha.1",
  "description": "A Rollup plugin wrapper for Mocha.",
  "keywords": [
    "rollup-plugin",
    "mocha"
  ],
  "homepage": "https://github.com/Arnesfield/rollup-plugin-mocha#readme",
  "bugs": {
    "url": "https://github.com/Arnesfield/rollup-plugin-mocha/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arnesfield/rollup-plugin-mocha.git"
  },
  "license": "MIT",
  "author": "Jefferson Rylee <rylee.jeff385@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./lib/index.mjs",
    "require": "./lib/index.cjs",
    "default": "./lib/index.mjs"
  },
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "rollup -c",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm run build -- -w",
    "pretest": "node esbuild.cjs",
    "test": "rollup -c rollup-test.config.js",
    "posttest": "rimraf _mocha.js"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/chai-spies": "^1.0.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "chai": "^4.3.6",
    "chai-spies": "^1.0.0",
    "esbuild": "^0.14.46",
    "eslint": "^8.18.0",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "mocha": "*",
    "rollup": "^1.20.0 || ^2.0.0"
  },
  "peerDependenciesMeta": {
    "mocha": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=0.1.16"
  }
}
